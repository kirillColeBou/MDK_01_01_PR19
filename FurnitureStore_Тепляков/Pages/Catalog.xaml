<Page x:Class="FurnitureStore_Тепляков.Pages.Catalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureStore_Тепляков.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="782"
      Title="Catalog">

    <Grid Background="#000">
        <Button Content="X" FontSize="32" HorizontalAlignment="Left" Margin="10,10,0,0" Width="40" Height="40" VerticalAlignment="Top" Click="Close"/>
        <Button Content="Отменить все фильтры" FontSize="14" HorizontalAlignment="Right" Margin="0,10,10,0" Width="200" Height="40" VerticalAlignment="Top" Click="Cansel"/>
        <Button Click="Filter_1" Content="Столы" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="25" Margin="0,150,0,0"/>
        <Button Click="Filter_2" Content="Диваны" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="25" Margin="0,190,0,0"/>
        <Button Click="Filter_3" Content="Шкафы" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="25" Margin="0,230,0,0"/>
    </Grid>
</Page>
